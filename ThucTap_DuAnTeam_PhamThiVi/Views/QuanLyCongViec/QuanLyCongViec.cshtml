<div style="border: 1px solid black;margin-top: 80px; padding-top:15px; padding-right:10px" class="container-fluid">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-lg-1" style="padding-top:5px;">
                <h6>Tháng</h6>
            </div>
