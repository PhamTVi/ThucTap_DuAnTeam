@model ThucTap_DuAnTeam_PhamThiVi.Models.DUAN
@using ThucTap_DuAnTeam_PhamThiVi.Models
@{
    ViewBag.Title = "Index";
    var lst = ViewData["todoList"] as List<TODOLIST>;
